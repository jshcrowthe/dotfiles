[user]
	name = Josh Crowther
	email = jshcrowthe@gmail.com
[alias]
	ci = ci-status
	cm = commit -m
	co = checkout
	dt = difftool
	mt = mergetool
	pr = pull-request
	undo = reset HEAD~1
	log = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[credential]
	helper = osxkeychain
[push]
	default = simple
[url "https://"]
	insteadOf = git://
[pull]
	rebase = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
[core]
	editor = /Applications/Sublime\\ Text.app/Contents/SharedSupport/bin/subl -n -w
[hub]
	protocol = https
